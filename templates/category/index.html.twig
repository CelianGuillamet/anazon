{% extends 'base.html.twig' %}

{% block title %}Listes des catégories
{% endblock %}

{% block body %}
	<h1>Listes des catégories</h1>
	<a class="btn btn-primary" href="{{ path('app_categories_new') }}">Ajouter une catégorie</a>
	{% for category in categories %}
		<h2>
			<a href="{{ path('app_categories_show', { id: category.id} )}} ">
				{{category.name}}
			</a>
		</h2>
		{% if category.parent %}
			<p>enfant de
				{{ category.parent.name }}</p>
		{% endif %}
	{% endfor %}

{% endblock %}
